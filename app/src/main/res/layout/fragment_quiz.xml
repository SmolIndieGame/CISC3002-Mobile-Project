<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizFragment">

    <TextView
        android:id="@+id/quiz_text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/quiz_seek_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp" />

        <TextView
            android:id="@+id/quiz_text_sound"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/quiz_seek_sound"
            android:layout_alignParentEnd="true"
            android:text="@string/place_holder"
            android:textAlignment="textEnd" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quiz_button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start" />

        <Button
            android:id="@+id/quiz_button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause" />

        <Button
            android:id="@+id/quiz_button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />
    </LinearLayout>

    <ImageView
        android:id="@+id/quiz_image_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background" />

    <RadioGroup
        android:id="@+id/quiz_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/quiz_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer1" />

        <RadioButton
            android:id="@+id/quiz_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer2" />

        <RadioButton
            android:id="@+id/quiz_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer3" />

        <RadioButton
            android:id="@+id/quiz_option_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer4" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quiz_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous" />

        <Button
            android:id="@+id/quiz_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>

    <Button
        android:id="@+id/quiz_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <TextView
        android:id="@+id/quiz_text_remains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remain Time" />
</LinearLayout>